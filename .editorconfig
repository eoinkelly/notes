# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.rb]
indent_style = space
indent_size = 2

# 4 space indentation
[*.md]
indent_style = space
indent_size = 4
