{
  "extends": "@tsconfig/node20",
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "Node",
    "rootDir": "./",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "removeComments": false,
    "skipLibCheck": false
  },
  "exclude": [".serverless", "coverage", "node_modules", "lib"],
  "files": [".eslintrc.js"],
  "include": ["**/*.js", "**/*.ts"]
}
